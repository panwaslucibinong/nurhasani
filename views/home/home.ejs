<div id="carouselExampleSlidesOnly" class="carousel slide" data-bs-ride="carousel">
  <div class="carousel-inner mb-3">
    <div class="carousel-item active">
      <img src="img/slide1.png" class="d-block w-100 rounded" alt="Banner Utama">
    </div>
    <% home_Data.banner.forEach((myBanner, i) => { %>
      <div class="carousel-item">
        <img src="<%= myBanner.banner_Link %>" class="d-block w-100 rounded" alt="<%= myBanner.banner_Title %>">
      </div>
    <% }) %>
  </div>
</div>

<div class="row g-2 mb-2">
  <% home_Data.card.forEach((myCard, i) => { %>
    <div class="col-4 col-md-2">
      <div class="card catagory-card h-100 shadow-sm" onmouseover="this.style.backgroundColor='#EBF1F1'" onmouseout="this.style.backgroundColor='';">
        <a class="text-danger no-underline" style="text-decoration: none;" href="<%= myCard.card_Link %>">
            <div class="card-body text-center">
              <i class="<%= myCard.card_Icon %>" style="font-size: 30px;"></i>
              <h6 class="card-title text-muted" style="font-size: 13px;"><%= myCard.card_Title %></h6>
            </div>
        </a>
      </div>
    </div>
  <% }) %>
</div>

<h6 class="text-uppercase fw-bold text-center text-muted mt-3">BERITA TERBARU...</h6>
<div class="row row-cols-1 row-cols-md-3 g-2">
  <% for (let i = 0; i < 2; i++) { %>
    <!-- <a href="/berita/detail/<%= berita_data[i].link %>" class="border-bottom mb-1" onmouseover="this.style.backgroundColor='#EBF1F1'" onmouseout="this.style.backgroundColor='';"> -->
    <a href="<%= berita_data[i].link %>" class="border-bottom mb-1" onmouseover="this.style.backgroundColor='#EBF1F1'" onmouseout="this.style.backgroundColor='';">
      <div class="col">
        <img src="<%= berita_data[i].thumbnail %>" class="card-img-top mb-2" alt="" style="height: auto; width: 100%; aspect-ratio: 5 / 2.5;">        
        <% function formatDate(isoDate) {
          const pubDate = new Date(isoDate);
          const options = { weekday: 'long', day: 'numeric', month: 'long', year: 'numeric', timeZone: 'Asia/Jakarta' };
          return pubDate.toLocaleDateString('id-ID', options);
        } %>
    
        <span class="badge bg-success mb-1"><%= formatDate(berita_data[i].pubDate) %></span>
        <h6 class="text-uppercase fw-bold text-muted"><%= berita_data[i].title %></h6>
        <!-- <p class="text-muted mb-2" style="text-align: justify;"><%= berita_data[i].description %></p> -->
      </div>
    </a>
  <% } %> 
</div>

<footer class="text-center text-lg-start bg-white text-muted">
  <section class="mt-3 mb-4">
    <div class="container text-center text-md-start mt-2">
      <div class="row mt-3">
        <div class="col-md-6 col-lg-6 col-xl-6 mx-auto mb-4">
          <!-- <h6 class="text-uppercase fw-bold mb-2">Panwaslu Kecamatan Cibinong</h6> -->
          <p class="card-text" style="text-align: justify;">
            Bawaslu adalah lembaga penyelenggara Pemilu yang bertugas mengawasi penyelenggaraan Pemilu di seluruh wilayah Negara Kesatuan Republik Indonesia.
          </p>
        </div>
        <div class="col-md-6 col-lg-6 col-xl-6 mx-auto mb-4">
          <h6 class="text-uppercase fw-bold mb-2">Kontak</h6>
          <% home_Data.kontak.forEach((myKontak, i) => { %>
            <h7><i class="<%= myKontak.kontak_Icon %>"></i><%= myKontak.kontak_Title %><br></h7>
          <% }) %>
        </div>
      </div>
    </div>
  </section>
</footer>
