    <span class="badge bg-secondary"><%= dataAbsens.jam_absen %> WIB</span>
  </div>
  <div class="container mb-3 mt-3">                
    <label for=""><strong>Rencana Kerja</strong></label>
    <div class="card">
      <div class="card-body text-center">
        <p class="card-text" style="text-align: justify;"><%= dataAbsens.hasil_kerja %></p>
      </div>
    </div>                  
  </div>
  </div>
</div>